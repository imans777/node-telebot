<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="container">
            <h1 class="bg-warning title-page"> دسته‌های {{gender_persian}}  </h1>
        </div>
    </div>
</div>
{{#each types}}
    <div class="row">
        {{#each this}}
            <div class="col-sm-6 col-md-4">
                <a href="/{{gender}}/{{this.type_name}}">
                    <button type="button" class="btn btn-success btn-lg btn-block custom-button-width navbar-left collection-btn">
                        {{this.type_name}}
                    </button>
                </a>
                <div class="btn-group btn-group-justified">
                    <div class="btn-group">
                        <form action="/{{gender}}/{{this.type_name}}/previous" method="post">
                            <button type="submit" class="btn btn-primary"><span class="fa fa-chevron-circle-left fa-2x"></span></button>
                        </form>
                    </div>
                    <div class="btn-group">
                        <form action="/{{gender}}/{{this.type_name}}/edit" method="get">
                            <button type="submit" class="btn btn-info"><span class="fa fa-pencil-square-o fa-2x"></span></button>
                        </form>
                    </div>
                    <div class="btn-group">
                        <form action="/{{gender}}/{{this.type_name}}/delete" method="post">
                            <button type="submit" class="btn btn-danger"><span class="fa fa-trash fa-2x"></span></button>
                        </form>
                    </div>
                    <div class="btn-group">
                        <form action="/{{gender}}/{{this.type_name}}/next" method="post">
                            <button type="submit" class="btn btn-primary"><span class="fa fa-chevron-circle-right fa-2x"></span></button>
                        </form>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    <br>
    <br>
{{/each}}
<br><br><br>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form action="/{{gender}}/add" method="post">
            <div class="form-group">
                <input type="text" id="type" name="type" class="form-control" placeholder="نام دسته" required style="direction: rtl;">
            </div>
            {{!--<input type="hidden" name="_csrf" value="{{ csrfToken }}">--}}
            <button type="submit" class="btn btn-primary btn-lg btn-block">افزودن دسته جدید</button>
        </form>
    </div>
</div>
<div class="row">
    <div class="col-md-12 col-sm-12">
        <div class="container">
            <a href="/collections">
                <h2 class="bg-warning title-page">
                    بازگشت به مجموعه کالکشن‌ها
                </h2>
            </a>
        </div>
    </div>
</div>