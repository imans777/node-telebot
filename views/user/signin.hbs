<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h1><span class="fa fa-sign-in"></span> Sign In</h1>
		{{#if hasErrors}}
			<div class="alert alert-danger">
				{{# each messages}}
					<p>{{this}}</p>
				{{/each}}
			</div>
		{{/if}}
        <br>
        <!-- Add where you want your sign-in button to render -->
        <div id="result"></div>
		<form action="/user/signin" method="post">
			<div class="form-group">
				<label for="email">E-Mail / Username</label>
				<input type="text" id="email" name="email" class="form-control">
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<input type="password" id="password" name="password" class="form-control">
			</div>
			<input type="hidden" name="_csrf" value="{{ csrfToken }}">
			<button type="submit" class="btn btn-primary btn-lg">Sign In</button>
		</form>
        <br>
        <a href="/user/auth/google">
            <img class="google-login-button" src="/images/signin_google_button.png"/>
        </a>
        <br><br>
        <p style="font-size: large">Don't Have An Account? <a href="/user/signup">Sign Up Now!</a></p>
	</div>
</div>